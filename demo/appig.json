{
  "options": {
    "rootPath": "demo/out",
    "createContentsJson": true
  },
  "rules": {
    "flower1": {
      "sourceFile": "fl_portrait.jpg",
      "images": [
        {
          "fileName": "fl_portrait4444.jpg",
          "targetPath": "test",
          "size": "44x44"
        },
        {
          "fileName": "fl_portrait200100.png",
          "targetPath": "test",
          "size": "200x100"
        }
      ]
    },
    "flower2": {
      "sourceFile": "fl_landscape.jpg",
      "images": [
        {
          "fileName": "fl_landscape100200.jpg",
          "targetPath": "test",
          "size": "100x200"
        },
        {
          "fileName": "fl_landscape200100.png",
          "targetPath": "test",
          "size": "200x100"
        }
      ]
    },
    "flower_many": {
      "sourceFiles": [
        "fl_portrait.jpg",
        "fl_landscape.jpg"
      ],
      "images": [
        {
          "fileName": "{source}100100.jpg",
          "targetPath": "test",
          "size": "100x100"
        },
        {
          "fileName": "{source}200200.png",
          "targetPath": "test",
          "size": "200x200"
        }
      ]
    },
    "flower_color": {
      "sourceFile": "fl_grayscale.jpg",
      "sourceFiles": [
        "fl_portrait.jpg",
        "fl_grayscale.jpg"
      ],
      "images": [
        {
          "fileName": "{source}100100_red.jpg",
          "colorize": "#ff0000",
          "targetPath": "test",
          "size": "400x350"
        }
      ]
    },
    "flower_compose": {
      "sourceFile": "fl_portrait.jpg",
      "images": [
        {
          "fileName": "fl_portrait_composed.jpg",
          "targetPath": "test",
          "size": "400x350",
          "compose": {
            "composeImage": "fl_landscape.jpg",
            "size": "200x118",
            "offsetX": 10,
            "offsetY": 20
          }
        },
        {
          "fileName": "fl_portrait_composed_without_size.jpg",
          "targetPath": "test",
          "size": "400x350",
          "compose": {
            "composeImage": "fl_landscape.jpg",
            "offsetX": 80,
            "offsetY": 100
          }
        },
        {
          "fileName": "fl_portrait_composed_without_geometry.jpg",
          "targetPath": "test",
          "size": "400x350",
          "compose": {
            "composeImage": "out/test/fl_landscape100100.jpg"
          }
        }
      ]
    },
    "ic_color": {
      "sourceFiles": [
        "ic_house.png"
      ],
      "images": [
        {
          "fileName": "ic_house50.png",
          "targetPath": "test",
          "size": "50x50"
        },
        {
          "fileName": "ic_house_green50.png",
          "targetPath": "test",
          "size": "50x50",
          "fillColor": "#00ff00"
        },
        {
          "fileName": "ic_house50.png",
          "targetPath": "test",
          "replaceInTargetName": {
            "_house": "_renamed"
          },
          "size": "50x50"
        }
      ]
    }
  }
}